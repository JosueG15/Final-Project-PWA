@page
@model ProyectoFinalRazorPWA.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Lista de categorias
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-page="/categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Crear nueva categoria
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Nombre de categoria
                </th>
                <th>
                    Orden de visualizacion
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.CategoryList.OrderBy(cat => cat.DisplayOrder))
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a asp-page="/categories/delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Borrar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


